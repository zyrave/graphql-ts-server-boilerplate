{
  "name": "graphql-ts-server-boilerplate",
  "version": "0.0.1",
  "description": "Awesome project developed with TypeORM.",
  "license": "MIT",
  "repository": {},
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/jest": "^23.3.9",
    "@types/node": "^10.12.10",
    "@types/uuid": "^3.4.4",
    "@types/yup": "^0.26.2",
    "cross-env": "^5.2.0",
    "jest": "^23.6.0",
    "prettier": "^1.15.2",
    "ts-jest": "^23.10.5",
    "ts-node": "7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-config-prettier": "^1.16.0",
    "typescript": "3.1.6"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "graphql-import": "^0.7.1",
    "graphql-request": "^1.8.2",
    "graphql-tools": "^4.0.3",
    "graphql-yoga": "^1.16.7",
    "npm-check-updates": "^2.15.0",
    "pg": "^7.6.1",
    "reflect-metadata": "^0.1.12",
    "typeorm": "0.2.9",
    "yup": "^0.26.6"
  },
  "scripts": {
    "start": "cross-env NODE_ENV=development pm2 start && pm2 logs graphql-yoga-server",
    "stop": "pm2 kill",
    "restart": "yarn stop && yarn start",
    "test": "cross-env NODE_ENV=test jest --detectOpenHandles --forceExit",
    "gen-schema-types": "gql2ts src/schema.graphql -o src/types/schema.d.ts"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
